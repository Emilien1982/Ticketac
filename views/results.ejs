<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./head') %>
  <title>Ticketac - Results</title>
</head>
<body>
  <%- include('./header') %>

  <% if (results.length < 1) { %>
    <div class="my-3 d-flex flex-column align-items-center">
      <h2 class="text-light text-center">Ooops! No trains available...</h2>
      <a href="/">
        <button type="button" class="btn btn-danger">Home</button>
      </a>
    </div>
  <% } else { %>
    <div class="container narrow">
      <h2 class="mt-5 text-light">Tickets available on <%= dateFormater(results[0].date) %>:</h2>
      <div class="mt-3">
      <% results.forEach(result => { %>
        <div class="card mt-3">
          <div class="card-body d-flex justify-content-between align-items-center py-3 px-4">
            <div>
              <%= result.departure %> / <%= result.arrival %>
            </div>
            <div>
              Train departure at: <%= result.departureTime %> pm
            </div>
            <div>
              <%= result.price %> â‚¬
              <a href="/add-trip?trip_id=<%= result._id %>" class="ms-2"><button type="button" class="btn btn-danger">OK</button></a>
            </div>
          </div>
        </div>
      <% }) %>
      </div>
    </div>
  <% } %>


  


  <%- include('./footer') %>



</body>
</html>