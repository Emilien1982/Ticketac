<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('./partials/head');%>
  <body>

    <!--HEADER-->
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand flex-grow-0" href="#">
          <img src="../images/train.png" alt="Ticketac logo" width="30" height="30" class="d-inline-block align-text-top">
          Ticketac
        </a>
      </div>
    </nav>
    <div class="container-lg">
      <% if (message) { %>
        <div class="alert alert-danger" role="alert">
          <%= message %>
        </div>
      <% } %>
      <!-- SIGN UP AREA -->
      <div class="row">
        <div class="col-12 col-sm-6 text-center">
          <div class="formArea">
            <h4 class="titleForm text-light">Sign Up</h4>
            <form action="/users/sign-up" method="POST">
              <div class="form-group mt-3">
                <input type="text" class="form-control mt-2 mt-2" placeholder="name" name="name" required>
              </div>
              <div class="form-group">
                <input type="text" class="form-control mt-2" placeholder="firstname" name="firstName" required>
              </div>
              <div class="form-group">
                <input type="email" class="form-control mt-2" aria-describedby="emailHelp" placeholder="email" name="email" required>
              </div>
              <div class="form-group">
                <input type="password" class="form-control mt-2"  placeholder="password" name="password" required>
              </div>
              <button type="submit" class="btn btn-danger mt-2">confirm</button>
            </form>
          </div>
        </div>

        <!-- SIGN IN AREA -->
        <div class="col-12 col-sm-6 mt-4 mt-sm-0 text-center">
          <div class="formArea">
            <h4 class="titleForm text-light">Sign In</h4>
            <form action="users/sign-in" method="POST">
              <div class="form-group mt-3">
                <input name="email" type="email" class="form-control mt-2" aria-describedby="emailHelp" placeholder="email" required>
              </div>
              <div class="form-group">
                <input name="password" type="password" class="form-control mt-2" placeholder="password" required>
              </div>
              <button type="submit" class="btn btn-danger mt-2">confirm</button>
            </form>
          </div>
        </div>
      </div>
    </div>

  </body>
  <%- include('./partials/footer');%>
</html>

