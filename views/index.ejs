  <body>

    <!--HEADER-->
    <nav class="container-fluid">
      <div id="header"<nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">
          <img src="/images/train.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
